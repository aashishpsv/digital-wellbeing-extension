{
    "manifest_version": 3,
    "name": "Website Time Limiter",
    "version": "1.0",
    "description": "Limit the time you spend on specified websites.",
    "permissions": ["storage", "tabs", "webNavigation", "webRequest", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://*/*"
    ]
  }
  